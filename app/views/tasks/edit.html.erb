

<%= form_for(@task) do |f| %>


  <div class="card">
    <div class="card-category"> <%= @task.status%> </div>
    <div class="card-description">
      <h2><%= f.text_field :name %></h2>
      <p><%= f.text_area(:description, size: '50x5') %></p>
      <div class="edit-button">
        <button class="btn btn-outline-success btn-sm">Edit!</button>
      </div>
    </div>
  </div

<% end %>
